{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11
  },
  "plugins": ["react", "jest"],
  "rules": {
    "no-param-reassign": "off"
  }
}
